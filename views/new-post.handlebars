<div class='col-md-6'>
  <h3>Create a New Post:</h3>

  <form
    action='/{{getEndpoint edit}}'
    method='POST'
    class='form new-project-form'
  >
    <input type='hidden' name='blogId' value='{{blog.id}}' />
    <div class='form-group'>
      <label for='project-name'>title:</label>
      <input
        class='form-input'
        type='text'
        id='title'
        name='title'
        value='{{getValue blog.title}}'
      />
    </div>
    <div class='form-group'>
      <label for='project-desc'>content:</label>
      <textarea
        class='form-input'
        rows='5'
        id='content'
        name='content'
      >{{getValue blog.content}}</textarea>
    </div>
    <div class='form-group'>
      <button type='submit' class='btn btn-primary'>{{getBtnContent
          edit
        }}</button>
    </div>
  </form>
</div>